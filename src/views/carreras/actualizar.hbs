<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Actualizar Carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/carreras/actualizar/{{carrera.idcarrera}}" method="POST" onsubmit="return validarFormulario()">
                <div class="form-group">
                    <label for="idcarrera">ID Carrera</label>
                    <input type="text" class="form-control" id="idcarrera" value="{{carrera.idcarrera}}" disabled>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="carrera" id="carrera" value="{{carrera.carrera}}" placeholder="Nombre de Carrera" autofocus />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function validarFormulario() {
    var carrera = document.getElementById('carrera').value;

    if (carrera === '') {
        alert('Por favor, complete el campo "Nombre de Carrera".');
        return false; // Detiene el envío del formulario
    }

    // Puedes agregar más validaciones según tus necesidades

    return true; // Permite el envío del formulario
}
</script>