<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar Carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
       <div class="col-md-4">
        <form action="/carreras/mantenimiento" method="POST" onsubmit="return validarFormulario()">
            <div class="form-group">
                <input type="text" class="form-control" name="idcarrera" id="idcarrera" placeholder="ID de Carrera" autofocus />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="carrera" id="carrera" placeholder="Nombre de Carrera" autofocus />
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Guardar</button>
            </div>
        </form>
       </div>
    </div>
</div>


<script>
function validarFormulario() {
    var idcarrera = document.getElementById('idcarrera').value;
    var carrera = document.getElementById('carrera').value;

    if (idcarrera === '' || carrera === '') {
        alert('Por favor, complete todos los campos.');
        return false; // Detiene el envío del formulario
    }

    // Puedes agregar más validaciones según tus necesidades

    return true; // Permite el envío del formulario
}
</script>

